<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/tbCustomChat">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civCustomProfileImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/profile_img"
      android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:cropToPadding="true"/>

    <TextView
        android:id="@+id/tvCustomProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="profileName"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/civCustomProfileImage"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/civCustomProfileImage"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tvCustomProfileLastSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textColor="#fff"
        app:layout_constraintEnd_toStartOf="@+id/civCustomProfileImage"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCustomProfileName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvCustomProfileName"/>

</RelativeLayout>